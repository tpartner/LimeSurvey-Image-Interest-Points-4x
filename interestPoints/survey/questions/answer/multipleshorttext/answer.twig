{#
/**
 * Interest Points sub-question list
 *
 * @var $$sRows			: the rows, generated with the views rows/answer_row*.php
 *
 * @var $coreClass		: the LimeSurvey list classes
 * @var $basename		: the SGQ of the question
 
 **** Additional attributes:
 * @var question_template_attribute.image_path	: An absolute path to the image
 */
#}

<!-- Interest Points Interface -->
{% set interestPointsView = './views/interestPoints.twig' %}
{{ include(interestPointsView) }}
<!-- End of Interest Points Interface -->

<!-- answer -->
<ul class="{{ coreClass }} list-unstyled form-horizontal" role="group" aria-labelledby="ls-question-text-{{ basename }}">
    {% if aRows is empty %}
        {% include 'survey/questions/answer/multipleshorttext/empty.twig' %}
    {% else %}
        {% for aRow in aRows %}
            {% set rowTemplate = (aRow.textarea ? 'survey/questions/answer/multipleshorttext/rows/answer_row_textarea.twig' : 'survey/questions/answer/multipleshorttext/rows/answer_row_inputtext.twig') %}
            {% include rowTemplate with aRow only %}
        {% endfor %}
    {% endif %}

</ul>
<!-- end of answer -->

{{ registerPackage('jqueryui') }}
{{ registerPackage('jquery-touch-punch') }}
